.header
  = render "items/header_login"
.shipping-page
  .item-container
    =form_for("#") do |f|
      .item-image
        %p 商品画像
        %span.__label 必須
      %p.upload 最大10枚までアップロードできます
      .item-index
        .field
          .field__label
            %p 商品名
            %span.field__label__require
              必須
          .field__input--line
            =f.text_field :name, placeholder: "40文字まで", class:'item-name'
        .explanation
          .explanation__label
            %p 商品の説明
            %span.explanation__label__require 必須
          .explanation__input--line
            =f.text_area :name, placeholder: "1000文字まで", class:'item-explanation'
        .item-field
          .item-field__category
            %p カテゴリー
            %span.item-field__require 必須
          .item-field__input--line
            =f.text_field :name, placeholder: "kariokiba", class:'item-category'
        .field
          .field__label
            %p ブランド
            %span.field__label__any
              任意
          .field__input--line
            = f.text_field :brand_name, class:"brand-name", placeholder: "例）シャネル"