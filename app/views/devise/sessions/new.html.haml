.login-page
  = render partial: "render/header"
  .login-page__menu-bar
    %nav.login-page__menu
      %ol.login-page__menu__navigations
        %li.login-page__menu__first-navigation
          = link_to root_path do
            %P.login-page__menu__navigation-one furima >
        %li.login-page__menu__second-navigation
          = link_to root_path do
            %P.login-page__menu__navigation-two トップページ >
        %li.login-page__menu__third-navigation ログインページ
  .login-page__form
    .login-page__login-form
      .login-page__sign-up-form
        = link_to new_user_registration_path, class: "login-page__sign-up-form__link" do
          新規会員登録
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .login-page__field
          .login-page__field-email
            = f.email_field :email, autofocus: true, placeholder:"メールアドレス"
          .login-page__field-pass
            = f.password_field :pass, autocomplete: "off", placeholder:"パスワード(英数字8文字以上)"
          .login-page__actions
            = f.submit "ログイン", class: 'login-page__actions__btn'